<div class="row m-2 p-4 border border-0 rounded shadow bg-white">
    <table class="table table-striped table-bordered table-hover caption-top">
        <caption>DANH SÁCH CƠ SỞ Y TẾ
            <hr class="m-0">
        </caption>
        <thead class="text-center">
            <tr>
                <th>STT</th>
                <th>Tên cơ sở</th>
                <th>Địa chỉ</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            <% facilities.forEach((facility, index)=> { %>
                <tr>
                    <td>
                        <%= index + 1 %>
                    </td>
                    <td>
                        <%= facility.name %>
                    </td>
                    <td>
                        <%= facility.address %>
                    </td>
                    <td class="text-center">
                        <a href="/facility-detail/<%= facility.id %>">Xem chi tiết</a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>