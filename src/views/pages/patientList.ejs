<div class="row m-2 p-2 border border-0 rounded shadow bg-white caption-top">
    <span class="text-gray-600 text-start p-0">THÔNG TIN TỔNG QUÁT</span>
    <hr>
    <div class="d-flex justify-content-around align-items-end">
        <div class="card shadow-sm rounded border-2 bg-white p-3 w-25 text-center">
            <div class="icon-wrapper mb-2">
                <i class="fs-1 me-2 fa fa-user text-blue-300"></i><span class="fs-1 fw-bold text-blue-500"
                    id="totalPatients"></span>
            </div>
            <p class="mb-1 fs-5 text-blue-600">BỆNH NHÂN</p>
        </div>
    </div>
</div>
<div class="row m-2 p-4 border border-0 rounded shadow bg-white">
    <table class="table table-striped table-bordered table-hover caption-top">
        <caption>DANH SÁCH BỆNH NHÂN
            <hr class="m-0">
        </caption>
        <thead class="table-primary">
            <tr class="text-center">
                <th>STT</th>
                <th>Họ và tên</th>
                <th>Email</th>
                <th>Giới tính</th>
                <th>SDT</th>
                <th>Tùy chỉnh</th>
            </tr>
        </thead>
        <tbody id="patientTable">
            <% patients.forEach((patient, index)=> { %>
                <tr>
                    <td class="text-center">
                        <%= index + 1 %>
                    </td>
                    <td>
                        <%= patient.User.name %>
                    </td>
                    <td>
                        <%= patient.User.email %>
                    </td>
                    <% if (patient.User.sex) { %>
                        <td>
                            <%= patient.User.sex %>
                        </td>
                        <% } else { %>
                            <td class="text-danger">
                                * Chưa cập nhật
                            </td>
                            <% } %>
                            <td>
                                <%= patient.User.phone %>
                            </td>
                                <td class="text-center">
                                    <a href="/patient-detail/<%= patient.id %>">Xem chi tiết</a>
                                </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

    <nav id="paginationArea">
    </nav>
</div>