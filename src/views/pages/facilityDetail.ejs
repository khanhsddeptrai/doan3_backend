<div class="row g-0">
    <div class="container-fluid bg-white-200 bg-opacity-75 text-center p-4 po-ralative">
        <p class="fs-5 text-gray-700 text-start" id="pageTitle">Thông tin cơ sở y tế</p>
        <div id="contentArea">
            <div class="row m-0">
                <div class="col ms-3 ps-2 text-start">
                    <div class="row mb-2 border border-0 rounded shadow-sm bg-white">
                        <p class="fw-bold fs-5 text-center">Thông tin cơ sở y tế</p>
                        <p class="m-0">
                            Cơ sở y tế: <%= facility.name %>
                                <i class="fas fa-edit fw-light text-cyan-400 ms-2" style="cursor: pointer;"
                                    title="Chỉnh sửa thông tin"></i>
                        </p>
                        <p class="m-0">Điện thoại: <%= facility.phone %>
                        </p>
                        <p class="m-0">Ngày tạo: <%= facility.createdAt %>
                        </p>
                        <p class="m-0">Ngày chỉnh sửa: <%= facility.updatedAt %>
                        </p>
                    </div>
                </div>

                <div class="col ms-3 ps-2 text-start">
                    <table class="table table-striped table-bordered table-hover table-info">
                        <thead class="text-center">
                            <tr>
                                <th>STT</th>
                                <th>Tên bác sĩ</th>
                                <th>Chuyên khoa</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                            <% doctors.forEach((doctor, index)=> { %>
                                <tr>
                                    <td>
                                        <%= index + 1 %>
                                    </td>
                                    <td>
                                        <%= doctor.User.name %>
                                    </td>
                                    <td>
                                        <%= doctor.Specialty.name %>
                                    </td>
                                    <td class="text-center">
                                        <a href="/doctor-detail/<%= doctor.id %>">Xem chi tiết</a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>